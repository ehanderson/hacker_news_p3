<h1>Post: <%= @post.title %></h1>

<%= form_for @comment, url: post_comments_path(@post) do |f| %>
<%= f.error_messages %>
  <%= f.text_area :paragraph, placeholder: "comment"%>
  <br>
  <%= f.submit "Create Comment" %>
<% end %>  


<ul>
<% @post.comments.each do |comment| %>
    <li><%= User.find(comment.user_id).username %> | link 
      <%= comment.paragraph %>
    <% if comment.user_id == session[:user_id] %>
    <%= button_to("delete", post_comment_path(@post, comment), method: :delete, confirm: "Are you sure?") %>
    <%= button_to("edit comment", post_comment_path(@post, comment), method: :get) %>
    <% end %>  
    </li>
<% end %>

</ul>
  
  

